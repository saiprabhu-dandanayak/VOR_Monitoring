{
  "manifest_version": 3,
  "name": "Google Meet Screenshot & Participant Tracker",
  "version": "1.1",
  "description": "Automatically captures screenshots and tracks participants from Google Meet sessions",
  "permissions": [
    "tabs",
    "downloads",
    "alarms",
    "scripting",
    "storage",
    "debugger"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "<all_urls>",
    "http://vor-monitoring.z-apps.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "screenshot_camera.png",
      "48": "google_meet_icon.png",
      "128": "FlashCapture.png"
    }
  },
  "icons": {
    "16": "screenshot_camera.png",
    "48": "google_meet_icon.png",
    "128": "FlashCapture.png"
  }
}